<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atguigu.cateyes.activity.MainActivity">
    <FrameLayout
        android:id="@+id/fl_mainactivity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <RadioGroup
        android:id="@+id/rg_mainactivity"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:padding="4dp"
        android:background="@drawable/cs_phone_bg_press"
         android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rb_mainactivity_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableTop="@drawable/move_mainactivity_select"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawablePadding="2dp"
            android:text="电影"
            android:textSize="10dp"
            android:textColor="@drawable/text_color_select"
            />
        <RadioButton
            android:id="@+id/rb_mainactivity_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/cinema_mainactivity_select"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawablePadding="2dp"
            android:text="影院"
            android:textSize="10dp"
            android:textColor="@drawable/text_color_select"
            />
        <RadioButton
            android:id="@+id/rb_mainactivity_find"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/find_mainactivity_select"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawablePadding="2dp"
            android:text="发现"
            android:textSize="10dp"
            android:textColor="@drawable/text_color_select"
            />
        <RadioButton
            android:id="@+id/rb_mainactivity_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/mine_mainactivity_select"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@android:color/transparent"
            android:drawablePadding="2dp"
            android:text="我的"
            android:textSize="10dp"
            android:textColor="@drawable/text_color_select"
            />


    </RadioGroup>

</LinearLayout>
