<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:paddingRight="5dp"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/beijing_icon"/>
    <TextView
        android:id="@+id/tv_recyclerview_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_recyclerview"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        android:text="欢迎大家收看"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_recyclerview"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/a31"/>

</RelativeLayout>