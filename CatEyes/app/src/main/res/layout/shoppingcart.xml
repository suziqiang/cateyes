<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/viewpager_shoppingcar_icon"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <ImageView
            android:id="@+id/iv_shoppingcart_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/uv"/>
        <LinearLayout
            android:id="@+id/ll_add_point1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/tv_shopping_name"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tv_store1"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="漫威正品反浩克LED灯"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_shopping_price"
                android:layout_width="wrap_content"
                android:textColor="@android:color/holo_red_dark"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="15.9元"/>
            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_shopping_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="15.9"/>
                <View
                    android:layout_width="50dp"
                    android:background="#000000"
                    android:layout_centerInParent="true"
                    android:layout_height="0.5dp"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_shopping_fahuo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:text="购买成功后2天内发货，3-7天送达"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_shopping_baozhang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="正版授权"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="#dddddd"
            android:layout_height="20dp"/>
        <RelativeLayout
            android:id="@+id/rl_shopping_check_type_and_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/tv_shopping_check_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/background_dark"
            android:text="选择数量、规格"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_back01"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="#dddddd"
            android:layout_height="20dp"/>
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/tv_shopping_piangjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/background_dark"
            android:text="宝贝评价"/>
        <View
            android:layout_width="match_parent"
            android:background="#bbbbbb"
            android:layout_height="1dp"/>
     <RelativeLayout
         android:layout_marginLeft="10dp"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <ImageView
             android:id="@+id/i"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/s0"/>
         <TextView
             android:layout_toRightOf="@+id/i"
             android:layout_marginLeft="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="s853842733"/>
         <TextView
             android:id="@+id/t"
             android:layout_alignParentRight="true"
             android:layout_marginRight="10dp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="2015-06-03"/>
         <LinearLayout
             android:layout_below="@+id/t"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_marginTop="10dp"
             android:layout_height="wrap_content">
             <ImageView
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/x1"/>
             <ImageView
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/x1"/>
             <ImageView
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/x1"/>
             <ImageView
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/x1"/>
         </LinearLayout>
     </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、我是李元立，刚买的 用着超舒服 就是下边有点疼"/>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:background="#bbbbbb"
            android:layout_height="1dp"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="查看更多评论"/>
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:background="#dddddd"
            android:textSize="18dp"
            android:text="继续拖动,   查看图文详情"
            android:layout_height="300dp"/>
    </LinearLayout>
    </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_shopping_qianggou"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@android:color/white"
            android:text="立即抢购"
            android:background="@drawable/add_reply_pressed01"
            android:layout_height="40dp" />
    </RelativeLayout>
</RelativeLayout>
