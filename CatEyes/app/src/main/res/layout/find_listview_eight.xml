<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_find_describe_eight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:text="这部剧不因谎报，我是第四页的描述"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="170dp">
    <ImageView
        android:id="@+id/im_find_big_icon_eight"
        android:layout_width="230dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:background="#b1b1b1"/>
      <ImageView
          android:id="@+id/im_find_above_icon_eight"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:layout_marginLeft="10dp"
          android:layout_alignParentRight="true"
          android:scaleType="fitXY"
          android:background="#000000"/>
      <ImageView
          android:id="@+id/im_find_down_icon_eight"
          android:layout_width="120dp"
          android:layout_height="80dp"
          android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
          android:layout_alignParentRight="true"
          android:background="#fff222"/>

  </RelativeLayout>

    <include layout="@layout/find_bottom" />
</LinearLayout>
</LinearLayout>