<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/ll"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name_cinema_search"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:ellipsize="marquee"
            android:textSize="20dp"
            android:text="博纳国际影城"/>
        <TextView
            android:id="@+id/price_cinema_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name_cinema_search"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="49"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/rl_two"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/location_cinema_search"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:textColor="#6c6c6c"
            android:ellipsize="marquee"
            android:textSize="15dp"
            android:text="徜徉去房价肯定就发了多少积分卡到了附近代理费"
            />
        <TextView
            android:id="@+id/distance_cinema_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="5.8km"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rl_three"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/im_zuo_cinema"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_reply_nomoal"
            android:textColor="@android:color/holo_red_dark"
            android:text="座"
            />
        <TextView
            android:id="@+id/im_tuan_cinema"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_reply_nomoal"
            android:layout_marginLeft="3dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="团"
            />
        <TextView
            android:id="@+id/im_tui_cinema"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="1dp"
            android:layout_marginLeft="3dp"
            android:background="@android:color/holo_blue_dark"
            android:text="退"
            />
        <TextView
            android:id="@+id/im_gaiqian_cinema"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="1dp"
            android:layout_marginLeft="3dp"
            android:background="@android:color/holo_blue_dark"
            android:text="改签"
            />
        <TextView
            android:id="@+id/im_mzk_cinema"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:padding="1dp"
            android:layout_marginLeft="3dp"
            android:background="@android:color/holo_blue_dark"
            android:text="满赠卡"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wn"/>
        <TextView
            android:id="@+id/button_cinema"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11111111"
            android:textColor="#6c6c6c"/>

    </LinearLayout>


</LinearLayout>